<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/store"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAHALAXMI VASTU BHANDAR"
        android:textColor="#F00"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="10dp"
        android:layout_marginTop="70dp"
    />

    <TextView
        android:id="@+id/cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:7774861131"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        />
    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:Bavdhan,Pune"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_above="@id/cont"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        />
    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shanshankplwwaghmare@gmail.com"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_above="@id/add"
        android:padding="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All varieties of Home appliences are available with discount"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_above="@id/mail"
        android:padding="5dp"
        />

</RelativeLayout>
